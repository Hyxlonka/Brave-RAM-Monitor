{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PyInstaller: Build EXE (OneFile)",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "PyInstaller",
                "--onefile",
                // Optionale Argumente:
                "--name",
                "brave-ram-monitor", // Der Name Ihrer EXE-Datei
                // Hier direkt den Namen der Hauptdatei angeben, da ${fileBasename} vom aktuell geöffneten File abhängt
                "brave_ram_monitor.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Kompiliert das aktuelle Python-Skript mit PyInstaller zu einer EXE-Datei (--onefile)."
        }
    ]
}